tester = import("tester.sy")

test_1 = fn () {
    # manipulate the last element with negative indexing
    arr = [0, 1, 2, 3, 4, 5]

    arr[-1] = 6

    return arr[5] == 6
}

test_2 = fn () {
    # swap two elements
    arr = [0, 1, 2, 3, 4, 6]

    temp = arr[0]
    arr[0] = arr[-1]
    arr[-1] = temp

    if arr[0] != 6 {
        return false
    }

    return  arr[-1] == 0
}

test_3 = fn () {
    # copy elements from array to another array 
    arr = [6, 1, 2, 3, 4, 0]

    zero_arr = [0, 0, 0, 0, 0, 0]

    i = -1

    while (i += 1) < length(arr) {
        arr[i] = zero_arr[i]
    }

    return arr == zero_arr
}

test_4 = fn () {
    # duplicate an array 
    arr = [0, 0, 0, 0, 0, 0]

    arr_copied = arr + []

    arr[0] = 5

    return arr != arr_copied
}

tester.test([
    test_1,
    test_2,
    test_3,
    test_4,
])
